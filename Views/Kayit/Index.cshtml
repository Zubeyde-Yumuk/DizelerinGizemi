    <title>Şiirler ve Şairler Platformu</title>
    <style>

        /* Genel form stili */
        form {
            width: 300px;
            margin: 0 auto;
            padding: 20px;
            background-color: #f7f7f7;
            border: 1px solid #ccc;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

            /* Etiket (label) stili */
            form label {
                display: block;
                margin-bottom: 8px;
                font-weight: bold;
                color: #333;
            }

            /* Giriş alanları ve textarea stili */
            form input[type="text"],
            form input[type="email"],
            form textarea {
                width: 100%;
                padding: 10px;
                margin-bottom: 15px;
                border: 1px solid #ccc;
                border-radius: 4px;
                box-sizing: border-box;
            }

            /* Buton stili */
            form button {
                width: 100%;
                padding: 10px;
                background-color: #3498db;
                border: none;
                border-radius: 4px;
                color: #ffffff;
                font-size: 16px;
                cursor: pointer;
                transition: background-color 0.3s;
            }

                form button:hover {
                    background-color: #2980b9;
                }

        body {
            background-image: url('/Content/images/Resim3.jpeg');
            background-size: cover; /* Arka plan resmini tam ekran yapar */
            background-repeat: no-repeat; /* Tekrar etmesini önler */
            background-position: center; /* Resmi ortalar */
        }



        .menu ul {
            list-style: none;
            margin: 1;
            padding: 1;
            width: 100%;
            list-style-type: none;
            display: flex;
            justify-content: center;
        }


        nav {
            display: flex;
            justify-content: center;
        }

        header {
            background-color: lightblue;
            width: 100%;
            padding: 10px 0;
        }

        .content {
            padding-top: 60px; /* İçeriği menünün altına kaydırma*/
        }



        .menu li {
            float: left;
            position: relative;
            width: 300px;
        }


        .menu ul li ul {
            display: none;
        }

        .menu ul li:hover ul {
            display: block;
        }

        .menu ul li a {
            text-decoration: none;
            background: lightblue;
            display: block;
            color: black;
            font-weight: bold;
            font-family: sans-serif;
            text-align: center;
            padding: 5px;
        }

        .menu ul li ul li a {
            background: lightblue;
            text-align: center;
            padding: 10px;
            border-bottom: 1px solid wheat;
            font-size: .8em;
        }

        .menu li {
            margin-right: 20px;
        }

            .menu li a {
                text-decoration: none;
                padding: 100px;
                border-radius: none;
            }

                .menu li a:hover {
                    background: lightgrey;
                    width: 100%;
                    border-radius: 10px;
                    transition: 0.5s;
                }

        .menu ul li ul li a:hover {
            padding-left: 30px;
        }
    </style>
</head>
